@model ElectricEye.Web.Models.AlertSetting

@{
    ViewData["Title"] = "Delete Alert Setting";
}

<h1>Delete Alert Setting</h1>

<h3>Are you sure you want to delete this alert setting?</h3>
<div>
    <h4>Alert Setting Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Threshold</dt>
        <dd class="col-sm-10">@Model.Threshold</dd>
        <dt class="col-sm-2">Alert Type</dt>
        <dd class="col-sm-10">@Model.AlertType</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "AlertSettings")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
